<div id="map_container">
  <div id="overlay"></div>
  <div id="show-all-routes" onclick="showAllRoutes()" style="display: none;"><span class="icon-uniE607" title="Mostrar todas las rutas"></span></div>
  <div id="map-canvas"></div>
  <div id="bottle">
    <img src="/assets/bottle_631.png" alt="José Cuervo Tradicional">
  </div>
  <div id="picture-gallery-container" onclick="pictureGalleryClick(event)">
    <div id="picture-gallery">
      <input type="hidden" id="current-picture-id" value="0"/>
      <div id="panorama-overlay"></div>
      <div id="panorama"></div>
      <img id="marker-picture" src=""/>
      <div class="post">
        <div class="bkg-opacity"></div>
        <span class="post-author"></span>
        <span class="post-like"></span>
        <p></p>
        <div class="navigation">
          <div class="arrow arrow-left" onclick="showPreviousPicture()"> < Anterior</div> |
          <div class="arrow arrow-right" onclick="showNextPicture()">Siguiente > </div>
        </div>
      </div>
    </div>
  </div>
  <div id="user-picture-gallery-container" onclick="userPictureGalleryClick(event)">
    <div id="user-picture-gallery">
      <input type="hidden" id="user-current-picture-id" value="0"/>
      <div id="user-panorama-overlay"></div>
      <div id="user-panorama"></div>
      <img id="user-marker-picture" src=""/>
      <div class="post">
        <div class="bkg-opacity"></div>
        <span class="post-author"></span>
        <span class="post-like"></span>
        <p></p>
        <div class="navigation">
          <div class="arrow arrow-left" onclick="userShowPreviousPicture()"> < Anterior</div> |
          <div class="arrow arrow-right" onclick="userShowNextPicture()">Siguiente > </div>
        </div>
      </div>
    </div>
  </div>
  <div id="influencer-picture" onclick="showInfluencerGallery()">
    <img src="" />
  </div>
  <div id="influencer-container" onclick="influencerGalleryClick(event)">
    <div id="influencer-gallery">
      <iframe id="influencer-video" width="420" height="345" src="">
      </iframe>
    </div>
  </div>

  <div id="news-feed">
    <div class="news-feed-canvas">
      <div class="news-feed-header"r>
        <img src="/assets/logo.png" alt="GDL Tradicional" class="logo-gdl-tradicional">
      </div>
        <div id="news-feed-upper">
          <div id="user-div">
            <div id="login-btn">
              <a class="button tribute" href="#" title="Únete al homenaje" onclick=""><img src="/assets/logo_cuervo.png" alt="Cuervo tradicional"><span>Únete al homenaje</span></a>
              <a class="button" href="#" title="Participa" onclick="login()">Participa</a>
            </div>
            <div id="dashboard">
              <table>
                <tr>
                  <td class="dashboard-element-pic"><img /></td>
                  <td class="dashboard-element" colspan="2">
                    <div id="user-name"></div>
                    <div id="instagram-logout" onclick="logout()">Cerrar sesión</div>
                  </td>
                </tr>
                <tr>
                  <td class="user-element">
                    <div id="user-points"></div>
                    <div>Puntos</div>
                  </td>
                  <td class="user-element" onclick="showUserPictures()">
                    <div id="user-photos"></div>
                    <div>Fotos</div>
                  </td>
                  <td class="user-element"onclick="showInviteModal()">
                    <div id="user-invites"></div>
                    <div>Invitaciones</div>
                  </td>
                </tr>
              </table>

            </div>
          </div>
        </div>
        <div id="news-feed-lower">
          <a class="twitter-timeline" href="https://twitter.com/hashtag/gdlestradicional" data-widget-id="505100682592919552"></a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </div>
    </div>
    <div class="social-networks-icons">
      <ul>
        <li><a href="http://instagram.com/jctradicional" target="_blank"><span class="icon-uniE602"></span></a></li>
        <li><a href="https://twitter.com/jctradicional" target="_blank"><span class="icon-uniE600"></span></a></li>
        <li><a href="https://www.facebook.com/jctradicional" target="_blank"><span class="icon-uniE601"></span></a></li>
      </ul>
    </div>
  </div>
  
</div>

<div id="intro">
  <a class="desktop" onclick='launchApp()'>
    <img src="/assets/logo.png" alt="Entrar a Guadalajara es Tradicional">
  </a>
</div>

<div id="invites" style="display: none;">
    <div class="message">
      <span class="close_modal">x</span>
      <h3>Invita a tus amigos</h3>
      <div class="share-buttons">
          <a href="#" class="fb" onclick="shareFB()"><span class="icon-uniE601 icon"></span> Facebook</a>
          <a href="#" class="tw" target="_blank"><span class="icon-uniE600 icon"></span> Twitter</a>
      </div>
    </div>
</div>

<div id="mail-form" style="display: none;">
  <div class="message">
    <div class="mail-message">
      <h3>Ayúdanos a completar tu registro</h3>
      <form>
        <p>
            <label>Correo electrónico:</label>
            <%= email_field_tag :email, '', :required => true, :id => 'mail', :placehoder => 'example@mail.com' %>
		    <span id="email-validation-field"></span>
        </p>
        <p>
          <button class="send-mail">Enviar</button>
        </p>
      </form>
      <p class="privacity">
        Lee nuestro <a href="#" title="Aviso de privacidad">aviso de privacidad</a>
      </p>
    </div>
    <div class="success-message" style="display: none;">
      <h3>Gracias, espere un momento y se le redirigirá a GDLesTradicional</h3>
    </div>
  </div>
</div>

<div id="ruby-values" data-user="<%= @user.to_json%>"></div>
<div id="fb-root"></div>
