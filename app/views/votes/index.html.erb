<h1>Listing votes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Answer</th>
      <th>Route</th>
      <th>Subscribe</th>
      <th>Isuser</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.name %></td>
        <td><%= vote.email %></td>
        <td><%= vote.answer %></td>
        <td><%= vote.route_id %></td>
        <td><%= vote.subscribe %></td>
        <td><%= vote.isUser %></td>
        <td><%= link_to 'Show', vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_vote_path %>
